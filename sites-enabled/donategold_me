upstream api_backend {
    server backend:80;
}

server {

    listen 80;
    server_name ;
    charset utf-8;
    location / {
        proxy_pass http://api_backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /static {
        alias /var/uploads/;
    }
}